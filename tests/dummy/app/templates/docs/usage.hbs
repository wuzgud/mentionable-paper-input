<PaperTabs
  @selected={{this.selectedTab}}
  @onChange={{this.onTabChange}}
  @center={{false}}
  @stretch={{false}}
  @borderBottom={{false}}
  @shouldPaginate={{false}} as |tabs|>
  <tabs.tab>
    Template
  </tabs.tab>
  <tabs.tab>
    JS
  </tabs.tab>
  <tabs.tab>
    Result
  </tabs.tab>
</PaperTabs>

<div class="md-padding">
  {{#let (hash tab=this.selectedTab) as |current|}}
    {{#if (eq current.tab 0)}}
      <div class="angle-bracket-snippet">
        <DocsSnippet
          @language={{"htmlbars"}}
          @name="mentionable-input-angle-usage-template.hbs"/>
      </div>
    {{else if (eq current.tab 1)}}
      <DocsSnippet
        @title="my-controller.js"
        @language="ts"
        @name="mentionable-input-usage-controller.js"/>
    {{else if (eq current.tab 2)}}
      <div {{did-insert this.focusTextarea}}>
        <!-- BEGIN-SNIPPET mentionable-input-angle-usage-template.hbs -->
        <MentionablePaperInput
          @value={{this.value}}
          @onChange={{fn (mut this.value)}}
          @options={{this.userMentionOptions}}
          @onMention={{this.getMentionDisplayText}}
          @getMentionOptions={{this.searchUsersToMention}}
          @placeholder={{"Type @ to start mentioning"}}
          as |OptionResult|
        >
          <OptionResult as |user|>
            <span class="mi-name">{{user.name}}</span>
            <span class="mi-username">{{user.username}}</span>
          </OptionResult>
        </MentionablePaperInput>
        <!-- END-SNIPPET -->
      </div>
    {{/if}}
  {{/let}}
</div>
